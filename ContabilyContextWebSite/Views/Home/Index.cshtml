<!--Footer-->
<footer class="py-lg-4 py-md-3 py-sm-3 py-3" id="contact">
    <div class="container linebottom py-lg-5 py-md-5 py-sm-4 py-3">
        <div class="row linerows">
            <div class="col-lg-5 footer-left-grid">
                <div class="mb-lg-4 mb-3 footer-w3layouts-head">
                    <h2 style="color: #ffff;">Entre em contato</h2>
                </div>
                <div class="footer_grid_left">
                    <ul>
                        <li>
                            <span class="fa fa-map" aria-hidden="true"> </span>
                            <p>
                                Avenida Paulista , 967 – Bela vista.
                            </p>
                            <section class="map">
                                <div class="address_mail_footer_grids">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.0759557112146!2d-46.654339584475714!3d-23.56571536763947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c79a182c8f%3A0x992dc4622c03f5cf!2sAv.%20Paulista%2C%20967%20-%20Bela%20Vista%2C%20S%C3%A3o%20Paulo%20-%20SP%2C%2001311-100!5e0!3m2!1spt-BR!2sbr!4v1590176950924!5m2!1spt-BR!2sbr"></iframe>
                                </div>
                            </section>
                        </li>
                        <li>
                            <span class="fa fa-envelope-o" aria-hidden="true"> </span>
                            <p>
                                <a>E-mail: contabilycontext@gmail.com</a>
                            </p>
                        </li>
                        <li>
                            <span class="fa fa-phone" aria-hidden="true"> </span>
                            <p>Fone: (11) 3636-2121 / WhatsApp - (11)98547-8956</p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-7 contact-form pb-lg-3 pb-2">
                <form asp-action="Index" asp-anti-forgery="true" method="post">
                    <div class="row ile-wls-contact-mid">
                        <div class="col-lg-6 form-group contact-forms">
                            <input id="nome" type="text" asp-for="Nome" class="form-control" placeholder="*Digite seu nome" required="">
                        </div>

                    </div>
                    <div class="row ile-wls-contact-mid">
                        <div class="col-lg-6 form-group contact-forms">
                            <input id="email" type="email" asp-for="_Email" class="form-control" placeholder="*Digite seu email" required="">
                        </div>
                    </div>
                    <div class="row ile-wls-contact-mid">
                        <div class="col-lg-10 form-group contact-forms">
                            <input id="telefone" type="text" asp-for="Telefone" class="form-control" placeholder="Digite telefone para contato" data-mask="(00) 00000-0000" title="Opcional">
                        </div>
                    </div>
                    <div class="row ile-wls-contact-mid">
                        <div class="col-lg-10 form-group contact-forms">
                            <textarea id="mensagem" class="form-control" asp-for="Mensagem" placeholder="*Digite a Mensagem" required=""></textarea>
                        </div>
                    </div>

                    <div class=" click-subscribe">
                        <button type="submit" class="btn sent-butnn btn-lg">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="#container" class="move-top txt-center mt-3"></a>
    </div>
    <hr size="5" width=100% color="white">
    <div class="bottem-ile-footer text-center pt-lg-4 pt-3">
        <p>
            © 2020 CONTABILY CONTEXT. All Rights Reserved , 2020
        </p>
    </div>
</footer>
<!--//Footer-->
<!-- Modal -->
<style>
    .modal-content {
        background-color: rgb(79, 70, 131);
        color: #ffffff;
    }
</style>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="color:aqua">&times;</button>
            </div>
            <div class="modal-body">
                <p>@(TempData["Message"])</p>
            </div>
            <div id="camposvalidos" class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="LimparCampos()">Ok</button>
            </div>
            <div id="camposinvalidos" class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>

    </div>
</div>
<!--//Modal-->
