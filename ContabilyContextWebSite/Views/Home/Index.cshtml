@model ContabilyContextWebSite.Models.Email
@{
    @if (TempData["Message"] != null)
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#myModal').modal('show');
            });
        </script>

        <style>
            #camposinvalidos {
                display: none;
            }
        </style>
    }
    @if (TempData["CampoInvalido"] != null)
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#myModal').modal('show');
            });
        </script>
        <style>
            #camposvalidos {
                display: none;
            }

            #camposinvalidos {
                display: block;
            }
        </style>
    }
}
<!-- banner -->
